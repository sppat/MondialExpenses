@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Roles
            </td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td class="text-center">
                    <form asp-action="Delete">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>