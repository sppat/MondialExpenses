@model IEnumerable<Cashier>

@{
    ViewData["Title"] = "Cashiers";
}

<div class="row mt-5">
    <div class="col-md-12 d-flex justify-content-between">
        <h4>Cashiers List</h4>
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus"></i> Create</a>
    </div>
    <div class="row mt-5">
        @if (Model.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th>#</th>
                        <th>@Html.DisplayNameFor(m => m.Day)</th>
                        <th>@Html.DisplayNameFor(m => m.Cash)</th>
                        <th>@Html.DisplayNameFor(m => m.Card)</th>
                        <th>@Html.DisplayNameFor(m => m.Sum)</th>
                        <th>@Html.DisplayNameFor(m => m.Total)</th>
                        <th>Utils</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in @Model)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.Day.ToString("dd/MM/yyyy")</td>
                            <td>@item.Cash</td>
                            <td>@item.Card</td>
                            <td>@item.Sum</td>
                            <td>@item.Total</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> | 
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | 
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                                <a asp-action="Export" asp-route-id="@item.Id">Export</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="col-md-6 offset-3">
                <p class="text-center">No data</p>
            </div>
        }
    </div>
</div>
